/**index.wxss**/
/* 搜索 */
.search{
  width: 100vw;
}
/* 轮播图 */
.swiper{
  width: 100%;
}
      .swiper .fa{
        width: 100%;
        height: 350rpx;
        margin: 0;
        margin-top: 10px;
        /* 居中 */
        text-align: center;
      }
      .swiper .slide-image {
        width: 96%;
        height: 97%;
        border-radius: 7px;
        position: relative;
        box-shadow: 0 0 10rpx rgba(0, 0, 0, .8)
      }
      .swiper image.active {
        transform: none;
        transition: all 0.25s ease-in 0s;
      }
      .swiper image.quiet {
        transform: scale(0.8333333);
        transition: all 0.25s ease-in 0s;
      }
/* 商品列表 */
.goods{
  width: 100%;
}
      .goods .list{
        width: 95%;
        height: 100%;
        margin: 0 auto;
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        justify-content: space-around;
      }
      .goods .item{
        width: 230rpx;
        height: 230rpx;
        border-radius: 7px;
        margin: 0 30rpx 80rpx;
        background-color: burlywood;
      }