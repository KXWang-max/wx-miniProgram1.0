  <view class="classify">

      <view class="left">
          <block wx:for="{{ leftList }}" wx:key="index">
              <view class="left-item {{curNav == item.id ? 'active':''}}"
              bindtap="switchRightTab"
              data-index="{{index}}" 
              data-id="{{item.id}}">{{item.text}}</view>
          </block>
      </view>

      <view class="right">
          <!-- 分类下有数据 -->
            <view class="right-items" wx:if="{{ leftList[curIndex].isHaveChild }}">
                  <block wx:for="{{ leftList[curIndex].rightContent }}" wx:key="index">
                      <navigator class="item" url="{{item.url}}">
                              <image class="img" src="{{item.img}}"></image>
                              <view class="text">{{item.text}}</view>  
                      </navigator>
                  </block>
            </view>
            <!-- 分类下无数据 -->
          <view class="empty" wx:else>该分类下暂无数据</view>
      </view>

</view>
